# MindMelt - Environment Variables
# Copy this file to .env.local for local development

# App Configuration
REACT_APP_NAME=MindMelt
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Master CS concepts before your ice cream melts!

# Environment
NODE_ENV=development
REACT_APP_ENV=development

# AI Configuration
REACT_APP_AI_API_KEY=AIzaSyCKoFRk4x3BUGBnOmoGxj5FBeznkxYkTUM

# MindMelt Learning Configuration
REACT_APP_DEFAULT_LEARNING_PATH=conceptual
REACT_APP_DEFAULT_QUESTIONING_STYLE=socratic
REACT_APP_TIMER_DURATION=420  # 7 minutes in seconds
REACT_APP_MAX_TIMER_DURATION=1500  # 25 minutes in seconds
REACT_APP_TIMER_INCREMENT=180  # 3 minutes bonus in seconds

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ICE_CREAM_ANIMATIONS=true
REACT_APP_ENABLE_TOPIC_DETAILS_MODAL=true
REACT_APP_ENABLE_PROGRESS_TRACKING=true

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ANIMATION_DURATION=300
REACT_APP_TOAST_DURATION=5000
REACT_APP_ICE_CREAM_UPDATE_INTERVAL=100  # Animation smoothness

# API Configuration (for future backend integration)
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000  # Longer timeout for AI responses

# Performance Configuration
REACT_APP_GEMINI_TEMPERATURE=0.8
REACT_APP_GEMINI_MAX_TOKENS=400
REACT_APP_QUALITY_ASSESSMENT_THRESHOLD=70

# Notes:
# - Get your Gemini API key from https://aistudio.google.com
# - All REACT_APP_ variables are embedded in the build and visible to users
# - Never commit real API keys to version control
# - Use .env.local for local development (not tracked by git)
# - Timer durations are in seconds
# - Quality threshold determines ice cream "refreezing" bonus