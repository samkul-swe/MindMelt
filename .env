# Socratic CS Learning Platform - Environment Variables
# Copy this file to .env.local for local development

# App Configuration
REACT_APP_NAME=Socratic CS Learning Platform
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=An adaptive learning app using Socratic questioning

# Environment
NODE_ENV=development
REACT_APP_ENV=development

# API Configuration (if you add backend services)
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=10000

# Analytics Configuration (optional)
REACT_APP_ANALYTICS_ID=your-analytics-id
REACT_APP_GOOGLE_ANALYTICS=your-ga-id
REACT_APP_MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_HINTS=true
REACT_APP_ENABLE_ICE_CREAM_BUTTON=true

# Learning Configuration
REACT_APP_DEFAULT_LEARNING_PATH=conceptual
REACT_APP_DEFAULT_TOPIC=euclidean-algorithm
REACT_APP_MAX_QUESTIONS_PER_SESSION=50
REACT_APP_HINT_DELAY=30000
REACT_APP_THINKING_DELAY_MIN=1000
REACT_APP_THINKING_DELAY_MAX=2000

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ANIMATION_DURATION=300
REACT_APP_TOAST_DURATION=5000
REACT_APP_PROGRESS_UPDATE_INTERVAL=1000

# Development Configuration
REACT_APP_MOCK_SLOW_RESPONSES=false
REACT_APP_MOCK_ERRORS=false
REACT_APP_SHOW_CONSOLE_LOGS=true
REACT_APP_SHOW_PERFORMANCE_METRICS=true

# Testing Configuration
REACT_APP_TEST_MODE=false
REACT_APP_TEST_USER_ID=test-user-123
REACT_APP_TEST_SCENARIO=default

# Accessibility Configuration
REACT_APP_HIGH_CONTRAST=false
REACT_APP_REDUCED_MOTION=false
REACT_APP_SCREEN_READER_SUPPORT=true

# Internationalization (for future use)
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr,de

# Social Media Configuration
REACT_APP_SOCIAL_TITLE=Socratic CS Learning Platform
REACT_APP_SOCIAL_DESCRIPTION=Discover computer science through guided questioning
REACT_APP_SOCIAL_IMAGE=https://your-domain.com/social-image.png
REACT_APP_SOCIAL_URL=https://your-domain.com

# Contact Information
REACT_APP_CONTACT_EMAIL=contact@socraticcs.com
REACT_APP_SUPPORT_URL=https://your-domain.com/support
REACT_APP_GITHUB_URL=https://github.com/your-username/socratic-cs-learning

# Security Configuration
REACT_APP_ENABLE_CSP=true
REACT_APP_ALLOWED_ORIGINS=localhost:3000,your-domain.com

# Performance Configuration
REACT_APP_BUNDLE_ANALYZER=false
REACT_APP_LAZY_LOADING=true
REACT_APP_SERVICE_WORKER=true

# Experimental Features
REACT_APP_ENABLE_VOICE_INPUT=false
REACT_APP_ENABLE_COLLABORATIVE_LEARNING=false
REACT_APP_ENABLE_AI_TUTORING=false
REACT_APP_ENABLE_GAMIFICATION=false

# Logging Configuration
REACT_APP_LOG_LEVEL=info
REACT_APP_LOG_QUESTIONS=true
REACT_APP_LOG_RESPONSES=true
REACT_APP_LOG_PERFORMANCE=true
REACT_APP_LOG_ERRORS=true

# Cache Configuration
REACT_APP_CACHE_RESPONSES=true
REACT_APP_CACHE_DURATION=3600000
REACT_APP_CACHE_SIZE_LIMIT=10000000

# Deployment Configuration
REACT_APP_BUILD_NUMBER=1
REACT_APP_DEPLOY_DATE=2024-01-01
REACT_APP_COMMIT_HASH=abc123def456

# Development Utilities
REACT_APP_SHOW_GRID=false
REACT_APP_SHOW_BOUNDARIES=false
REACT_APP_SHOW_COMPONENT_NAMES=false
REACT_APP_ENABLE_REACT_DEVTOOLS=true

# Error Tracking (optional)
REACT_APP_SENTRY_DSN=your-sentry-dsn
REACT_APP_BUGSNAG_API_KEY=your-bugsnag-key
REACT_APP_ROLLBAR_TOKEN=your-rollbar-token

# A/B Testing (optional)
REACT_APP_EXPERIMENT_ID=experiment-123
REACT_APP_VARIATION_ID=variation-a
REACT_APP_ENABLE_AB_TESTING=false

# Webhooks (if you add them)
REACT_APP_WEBHOOK_URL=https://your-domain.com/webhook
REACT_APP_WEBHOOK_SECRET=your-webhook-secret

# Database Configuration (if you add persistence)
REACT_APP_DB_HOST=localhost
REACT_APP_DB_PORT=5432
REACT_APP_DB_NAME=socratic_cs_learning
REACT_APP_DB_SSL=false

# Redis Configuration (if you add caching)
REACT_APP_REDIS_HOST=localhost
REACT_APP_REDIS_PORT=6379
REACT_APP_REDIS_PASSWORD=your-redis-password

# Email Configuration (if you add notifications)
REACT_APP_SMTP_HOST=smtp.gmail.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_USER=your-email@gmail.com
REACT_APP_SMTP_FROM=noreply@socraticcs.com

# File Upload Configuration (if you add file features)
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,txt
REACT_APP_UPLOAD_ENDPOINT=https://your-domain.com/upload

